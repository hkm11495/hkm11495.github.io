<form method="post" action="Feature5_Registration_Page.html">
  <div class="container">
    <center>  <h1> Expert Registeration Form</h1> </center>
    <hr>

    <div>
      <label>Sign Up for:</label><br>
        <input type="radio" value="Self" name="signup" checked> Self
        &nbsp;
        <input type="radio" value="Friend" name="signup"> Friend
    </div>

    &nbsp;

    <div>
      <label>Upload Profile Picture: </label>
      <form action="/action_page.php">
        <input type="file" id="myFile" name="filename">
      </form>
    </div>

    &nbsp;

    <div>
      <label> First Name </label>
      <input id="firstname" type="text" name="firstname" placeholder= "First Name" size="15" required />
    </div>

    <div>
      <label> Last Name: </label>
      <input id="lastname" type="text" name="lastname" placeholder="Last Name" size="15"required />
    </div>

    <div>
      <label>Gender :</label><br>
        <input type="radio" value="Male" name="gender" checked > Male
        &nbsp;
        <input type="radio" value="Female" name="gender"> Female
        &nbsp;
        <input type="radio" value="Other" name="gender"> Other
    </div>
    
    &nbsp;

    <div>
      <label>Phone :</label>
      <input type="text" name="phone" placeholder="Phone No." size="10"/ required>
    </div>

    <label for="email"><b>Email</b></label>
      <input type="text" placeholder="Email" name="email" required>

    <div>
    <label>Tech Skillset:</label>
      <textarea cols="80" rows="5" name="techskillset" value="address" required>  </textarea>
    </div>

    <label>Past Courses:</label>
      <textarea cols="80" rows="5" name="pastcourses" value="address" required>  </textarea>

    <label>Industry/Organization:</label>
      <textarea cols="80" rows="5" name="industry" value="address" required>  </textarea>

    <label>Github:</label>
      <input type="text" name="github" placeholder="Github" size="10"/ required>

    <label>Twitter </label>
      <input type="text" name="twitter" placeholder="Twitter" size="10"/ required>

    <div>
      <label>LinkedIn:</label>
      <input type="text" name="LinkedIn" placeholder="LinkedIn" size="10"/ required>
    </div>
    
    <input onclick="confirmInput()" type="Submit" value="Register" input name="submit" class="btn-block registerbtn" role="button">
    
  </div>  
</form>

