<script>
  function confirmInput() {
    var r = confirm("Please check your email to finish your registration. You will now be redirect to the home page");
      if (r == true) {
        //window.close() does not work in chrome
        //https://stackoverflow.com/questions/2032640/issue-with-window-close-and-chrome
        //*****Find a better way to redirect****** 
        setTimeout(window.close, 0);
        window.open('index.html');
      }
      return false;
  }
</script>

